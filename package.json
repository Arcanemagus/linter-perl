{
  "name": "linter-perl",
  "main": "./lib/init",
  "version": "0.9.0",
  "description": "Lint perl on the fly, using perl (B::Lint)",
  "repository": "https://github.com/AtomLinter/linter-perl",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^5.0.0",
    "grim": "^1.4.1",
    "lodash": "^3.10.0"
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  },
  "package-deps": [
    "linter:2.0.0"
  ]
}
